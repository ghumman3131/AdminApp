<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.adminapp.Home_activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blur"
       >

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/order_rec">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="left"
        android:padding="10dp"
        android:background="#bf000000">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CANTEEN PROFILE"
            android:clickable="true"
            android:textColor="#fff"
            android:textSize="20dp"
            android:onClick="canteen_profile"
            android:id="@+id/canteen_profile"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VIEW ORDERS"
            android:clickable="true"
            android:textColor="#fff"
            android:textSize="20dp"
            android:onClick="view_orders"
            android:id="@+id/view_orders"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD MENU"
            android:clickable="true"
            android:onClick="input_menu"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginTop="10dp"/>\
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CATEGORIES"
            android:clickable="true"
            android:onClick="categories"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginTop="10dp"/>


    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
